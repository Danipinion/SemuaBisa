<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivDialogIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/notification_canceled"
            android:layout_marginBottom="16dp"
            android:contentDescription="Icon" />

        <TextView
            android:id="@+id/tvDialogTitle"
            style="@style/Typography.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Here"
            android:layout_marginBottom="8dp"
            android:textColor="@color/neutral_text_primary"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvDialogMessage"
            style="@style/Typography.BodyMd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message description goes here."
            android:textColor="@color/neutral_text_secondary"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogNo"
                style="@style/Button.Secondary"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textColor="@color/primary_500"
                app:strokeColor="@color/primary_500"
                app:strokeWidth="1dp"
                android:textAllCaps="false"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDialogYes"
                style="@style/Button.Primary"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:backgroundTint="#EF4444"
                android:text="Yes"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>