<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/space_lg"
        android:background="@drawable/bg_circle_social"
        android:elevation="6dp"
        android:src="@drawable/ic_back"
        android:padding="12dp"
        app:tint="@color/neutral_text_primary"
        app:layout_anchor="@id/map"
        app:layout_anchorGravity="top|start"/>

    <LinearLayout
        android:id="@+id/locationBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:orientation="vertical"
        android:elevation="20dp"
        android:paddingHorizontal="@dimen/space_lg"
        android:paddingBottom="@dimen/space_xl"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_md"
            android:paddingBottom="@dimen/space_md"
            android:gravity="center_horizontal">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="@drawable/bg_search_field"
                android:backgroundTint="#D1D5DB" />

            <TextView
                style="@style/Typography.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                android:text="Choose your location"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_sm">

            <TextView
                style="@style/Typography.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Point"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etPickup"
                style="@style/Typography.BodyMd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_search_field"
                android:hint="Cari tujuan..."
                android:paddingHorizontal="@dimen/space_md"
                android:layout_marginBottom="@dimen/space_xl"/>

            <TextView
                style="@style/Typography.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickoff Point"
                android:layout_marginBottom="4dp"/>

            <AutoCompleteTextView
                android:id="@+id/etDropoff"
                style="@style/Typography.BodyMd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_search_field"
                android:hint="Cari tujuan..."
                android:paddingHorizontal="@dimen/space_md"
                android:layout_marginBottom="@dimen/space_xl"
                android:completionThreshold="3"
                android:imeOptions="actionSearch"
                android:inputType="textCapWords"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrder"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:textAllCaps="false"
                android:text="Find Now" />

            <View android:layout_width="match_parent" android:layout_height="20dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/driverBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:orientation="vertical"
        android:elevation="20dp"
        android:paddingHorizontal="@dimen/space_lg"
        android:paddingBottom="@dimen/space_xl"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="true">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_md"
            android:background="@drawable/bg_search_field"
            android:backgroundTint="#D1D5DB" />

        <TextView
            style="@style/Typography.H3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/space_lg"
            android:text="Choose a Driver"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDrivers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_lg"
            tools:listitem="@layout/item_driver" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectDriver"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:textAllCaps="false"
            android:text="Select Driver" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirmationBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:orientation="vertical"
        android:elevation="30dp"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_xl"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg">

            <TextView
                style="@style/Typography.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Confirmation"/>

            <ImageButton
                android:id="@+id/btnCloseConfirmation"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                app:tint="@color/neutral_text_primary"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_xl">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/ivConfDriverPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_md">

                <TextView
                    android:id="@+id/tvConfDriverName"
                    style="@style/Typography.H3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gustavo Franci"/>

                <TextView
                    android:id="@+id/tvConfRating"
                    style="@style/Typography.BodyMd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="⭐ 4.5"
                    android:textColor="#F59E0B"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xl"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#DBEAFE"> <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    style="@style/Typography.BodyMd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"/>
                <TextView
                    android:id="@+id/tvConfPrice"
                    style="@style/Typography.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 60.000"
                    android:textColor="#10B981"/> </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">
                <TextView
                    style="@style/Typography.BodyMd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"/>
                <TextView
                    android:id="@+id/tvConfTime"
                    style="@style/Typography.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Min"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/Typography.BodyMd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seats"/>
                <TextView
                    android:id="@+id/tvConfSeats"
                    style="@style/Typography.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/Typography.H4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xl"
            android:text="Notes"/>

        <EditText
            style="@style/Typography.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lorem ipsum dolor sit amet consectetur. Mauris ultricies gravida purus varius proin."
            android:textColor="@color/neutral_text_secondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrderNow"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:text="Order Now" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/paymentBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:orientation="vertical"
        android:elevation="40dp"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_xl"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg">

            <TextView
                style="@style/Typography.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Payment Method"/>

            <ImageButton
                android:id="@+id/btnClosePayment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                app:tint="@color/neutral_text_primary"/>
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/radioGroupPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md">

            <TextView
                style="@style/Typography.H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xl"
                android:text="Cash"/>

            <RadioButton
                android:id="@+id/rbSbPay"
                style="@style/PaymentRadioButton"
                android:text="Sbpay"
                android:layout_marginTop="@dimen/space_md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbCash"
                style="@style/PaymentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Cash"/>

            <TextView
                style="@style/Typography.H3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xl"
                android:text="Other Payment"/>

            <RadioButton
                android:id="@+id/rbQRIS"
                style="@style/PaymentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                android:text="QRIS"/>

            <RadioButton
                android:id="@+id/rbBank"
                style="@style/PaymentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank"/>

            <RadioButton
                android:id="@+id/rbEWallet"
                style="@style/PaymentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-Wallet"/>

            <RadioButton
                android:id="@+id/rbDana"
                style="@style/PaymentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dana"/>

            <RadioButton
                android:id="@+id/rbGopay"
                style="@style/PaymentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gopay"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinuePayment"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:text="Continue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/successBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:orientation="vertical"
        android:elevation="50dp"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_xl"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="true">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_md"
            android:background="@drawable/bg_search_field"
            android:backgroundTint="#D1D5DB" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="360dp"
            android:layout_height="298dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_xl"
            android:src="@drawable/accept_payment"
            android:contentDescription="Success Illustration"/>

        <TextView
            style="@style/Typography.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_lg"
            android:text="Motor Accepted"
            android:textColor="@color/neutral_text_primary"/>

        <TextView
            style="@style/Typography.BodyMd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:gravity="center"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="@color/neutral_text_secondary"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackDriver"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:text="Track Driver" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trackingBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:orientation="vertical"
        android:elevation="60dp"
        android:paddingHorizontal="@dimen/space_xl"
        android:paddingBottom="@dimen/space_xl"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="100dp"
        app:behavior_hideable="true">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_md"
            android:background="@drawable/bg_search_field"
            android:backgroundTint="#D1D5DB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTrackStatus"
                style="@style/Typography.H2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Driver Arriving"/>

            <TextView
                android:id="@+id/tvTrackTime"
                style="@style/Typography.BodyMd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Min Away"
                android:textColor="@color/neutral_text_secondary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/ivTrackDriverPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTrackDriverName"
                        style="@style/Typography.H4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gustavo Franci"/>
                    <TextView
                        android:id="@+id/tvTrackRating"
                        style="@style/Typography.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="⭐ 4.5"
                        android:textColor="#F59E0B"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTrackVehicle"
                    style="@style/Typography.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnChat"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_action_button"
                android:padding="10dp"
                android:src="@drawable/ic_message"
                app:tint="@color/primary_500"/>
            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_action_button"
                android:padding="10dp"
                android:src="@drawable/ic_phone"
                app:tint="@color/primary_500"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xl"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTrackPrice"
                    style="@style/Typography.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 60"/>
                <TextView
                    style="@style/Typography.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTrackPlateNumber"
                    style="@style/Typography.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SM-121212"/>
                <TextView
                    style="@style/Typography.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Transportation\nNumber"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTrackSeats"
                    style="@style/Typography.H4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Seats"/>
                <TextView
                    style="@style/Typography.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seats"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelTrip"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="32dp"
            android:backgroundTint="#EF4444"
            android:textAllCaps="false"
            android:text="Cancel" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>