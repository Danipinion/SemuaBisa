<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:id="@+id/txtYourTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Ticket"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- QR Code -->
    <ImageView
        android:id="@+id/imgQr"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_qr_placeholder"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtYourTicket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Train Info -->
    <TextView
        android:id="@+id/txtTrainInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MDN â†’ JKT"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgQr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom button -->
    <Button
        android:id="@+id/btnHome"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Home"
        android:backgroundTint="@color/blue"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
