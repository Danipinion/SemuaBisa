<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- LEFT BLUE BAR -->
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="#3B82F6" />

        <!-- CONTENT -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/txtTrainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train A | Economy"
                android:textStyle="bold"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginStart="0dp"
                >


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtFrom"
                    android:text="MDN"
                    android:textSize="26sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------------------"
                    android:layout_marginStart="5dp"
                    />
                <ImageView
                    android:src="@drawable/mingcute_train_line"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginHorizontal="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-----------------------"
                    android:layout_marginStart="0dp"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/txtTo"
                    android:text="JKT"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:text="Departure \n 5:00 PM"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="65dp"
                    android:textColor="#9CA3AF"
                    android:text="Duration: 20h 39m"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="75dp"
                    android:textSize="10sp"
                    android:textColor="#9CA3AF"
                    android:text="Arrival \n 9:30 PM"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- RIGHT BLUE BUTTON -->
        <LinearLayout
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#3B82F6">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:id="@+id/right_button"
                android:src="@drawable/outline_arrow_forward_ios_24" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
